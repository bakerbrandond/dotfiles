### Settings from original zathurarc ###
set selection-clipboard clipboard
set render-loading              "true"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#E5E9F0'
set completion-bg '#2E3440'

# Command line completion group elements
set completion-group-fg '#BF616A'
set completion-group-bg '#2E3440'

# Current command line completion element
set completion-highlight-fg '#2E3440'
set completion-highlight-bg '#E5E9F0'

# Default foreground/background color
set default-bg rgba(46,52,64,0.8)

# Input bar
set inputbar-fg '#E5E9F0'
set inputbar-bg '#2E3440'

# Notification
set notification-fg '#E5E9F0'
set notification-bg '#2E3440'

# Error notification
set notification-error-fg '#E5E9F0'
set notification-error-bg '#88C0D0'

# Warning notification
set notification-warning-fg '#E5E9F0'
set notification-warning-bg '#88C0D0'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#E5E9F0'
set statusbar-bg '#2E3440'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#BF616A'
set highlight-active-color '#BF616A'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#E5E9F0'

# 'Loading...' text
set render-loading-fg '#E5E9F0'
set render-loading-bg '#2E3440'

# Index mode
set index-fg '#E5E9F0'
set index-bg '#2E3440'

# Selected element in index mode
set index-active-fg '#2E3440'
set index-active-bg '#E5E9F0'